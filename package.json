{
	"name": "mech-node-starter",
	"version": "1.0.0",
	"description": "A Nodejs starter using Express, Typescript, Knex, Postgres, Passport, Morgan",
	"main": "index.js",
	"scripts": {
		"build": "cd client && next build",
		"lint": "cd client && next lint",
		"start": "node dist/index.js ",
		"compile": "ts-node build.ts && tsc",
		"client": "cd client && next dev",
		"start-client": "cd client && next start",
		"dev": "nodemon server/index.ts | pino-pretty",
		"dev:debug": "nodemon --exec 'node -r ts-node/register --inspect' server/index.ts | pino-pretty",
		"test": "mocha test/**/*.ts --exit",
		"test:debug": "mocha --inspect-brk test/**/*.ts --exit"
	},
	"dependencies": {
		"axios": "^0.26.1",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.19.0",
		"cookie-parser": "^1.4.4",
		"cors": "^2.8.5",
		"dotenv": "^8.1.0",
		"express": "^4.17.1",
		"express-validator": "^6.2.0",
		"jsonwebtoken": "^8.5.1",
		"knex": "^0.21.1",
		"knex-stringcase": "^1.3.0",
		"morgan": "^1.9.1",
		"next": "^12.1.1",
		"passport": "^0.4.0",
		"passport-jwt": "^4.0.0",
		"pg": "^8.0.3",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"styled-components": "^5.3.5"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/chai": "^4.2.3",
		"@types/cors": "^2.8.6",
		"@types/express": "^4.17.1",
		"@types/mocha": "^5.2.7",
		"@types/morgan": "^1.7.37",
		"@types/passport": "^1.0.1",
		"@types/pino": "^5.8.10",
		"chai": "^4.2.0",
		"eslint": "^8.12.0",
		"eslint-config-next": "^12.1.1",
		"mocha": "^6.2.1",
		"nodemon": "^1.19.3",
		"pino-pretty": "^3.2.1",
		"shelljs": "^0.8.3",
		"supertest": "^4.0.2",
		"ts-lint": "^4.5.1",
		"ts-node": "^8.4.1",
		"tslint": "^5.20.0",
		"typescript": "^3.6.3"
	}
}
